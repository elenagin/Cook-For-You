<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:clickable="true"
        android:focusable="true"

        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.pantry.PantryFragment">

            <ImageButton
                android:id="@+id/addItemButton"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/button_to_add_item"
                android:src="@android:drawable/ic_input_add"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addItemButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_item_to_pantry"
                card_view:layout_constraintBottom_toBottomOf="@+id/addItemButton"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.088"
                card_view:layout_constraintStart_toEndOf="@+id/addItemButton"
                card_view:layout_constraintTop_toTopOf="@+id/addItemButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <android.widget.ListView
        android:id="@+id/rvPantryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        card_view:layout_constraintStart_toStartOf="@+id/card"
        card_view:layout_constraintTop_toBottomOf="@+id/card" />

</androidx.constraintlayout.widget.ConstraintLayout>




