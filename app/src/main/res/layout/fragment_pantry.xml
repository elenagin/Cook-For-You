<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddItemPantry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:background="#E2D8FF"
        android:clickable="true"
        android:focusable="true"

        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4CAF50"
            tools:context=".ui.pantry.PantryFragment">

            <ImageButton
                android:id="@+id/addItemButton"
                android:layout_width="55dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/button_to_add_item"
                android:padding="40dp"
                android:src="@drawable/white_plus_sign"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/add_item_to_pantry"
                card_view:layout_constraintBottom_toBottomOf="@+id/addItemButton"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.088"
                card_view:layout_constraintStart_toEndOf="@+id/addItemButton"
                card_view:layout_constraintTop_toTopOf="@+id/addItemButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPantryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        card_view:layout_constraintTop_toBottomOf="@+id/cardAddItemPantry" />

</androidx.constraintlayout.widget.ConstraintLayout>